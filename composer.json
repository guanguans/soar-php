{
    "name": "guanguans/soar-php",
    "keywords": [
        "soar",
        "sql",
        "mysql",
        "debug",
        "php"
    ],
    "description": "SQL optimizer and rewriter php extension package.",
    "support": {
        "issues": "https://github.com/guanguans/soar-php/issues",
        "source": "https://github.com/guanguans/soar-php"
    },
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "琯琯",
            "email": "yzmguanguan@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "vimeo/psalm": "^4.0",
        "mockery/mockery": "^1.3",
        "brainmaestro/composer-git-hooks": "^2.8",
        "phpunit/phpunit": "^7.0 || ^8.0 || ^9.0"
    },
    "autoload": {
        "psr-4": {
            "Guanguans\\SoarPHP\\": "src"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Guanguans\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer style-lint",
                "composer test"
            ],
            "pre-push": [
                "composer style-lint",
                "composer test"
            ]
        }
    },
    "funding": [
        {
            "type": "wechat",
            "url": "https://www.guanguans.cn/images/wechat.jpeg"
        }
    ],
    "bin": [
        "bin/soar.darwin-amd64",
        "bin/soar.linux-amd64",
        "bin/soar.windows-amd64"
    ],
    "scripts": {
        "post-update-cmd": [
            "cghooks update"
        ],
        "post-merge": "composer install",
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "cghooks": "./vendor/bin/cghooks",
        "psalm": "./vendor/bin/psalm",
        "style-lint": "./vendor/bin/php-cs-fixer fix --using-cache=no --config=.php-cs-fixer.php --diff --dry-run --ansi",
        "style-fix": "./vendor/bin/php-cs-fixer fix --using-cache=no --config=.php-cs-fixer.php --ansi",
        "test": "./vendor/bin/phpunit --coverage-text --colors=always --cache-result-file=./build/.phpunit.result.cache --verbose",
        "test-c": "./vendor/bin/phpunit --coverage-html=./build/coverage/ --coverage-clover=./build/clover.xml --color=always --cache-result-file=./build/.phpunit.result.cache --verbose"
    }
}
